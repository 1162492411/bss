<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhd.mapper.BicycleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zhd.pojo.Bicycle">
        <id column="id" property="id" />
        <result column="status" property="status" />
        <result column="type" property="type" />
        <result column="location_x" property="locationX" />
        <result column="location_y" property="locationY" />
        <result column="batch" property="batch" />
        <result column="supplier" property="supplier" />
        <result column="service_time" property="serviceTime" />
        <result column="investment_time" property="investmentTime" />
        <result column="mileage" property="mileage" />
    </resultMap>

    <!-- BicycleSupplier -->
    <resultMap id="BicycleSupplierMap" type="com.zhd.pojo.BicycleSupplier">
        <id column="id" property="id" />
        <id column="batch" property="batch" />
        <collection property="supplierList" ofType="com.zhd.pojo.Supplier">
            <id column="supplier_id" property="id"/>
            <result column="supplier_name" property="name"/>
            <result column="supplier_address" property="address"/>
        </collection>
    </resultMap> 

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, status, type, location_x AS locationX, location_y AS locationY, batch, supplier, service_time AS serviceTime, investment_time AS investmentTime, mileage
    </sql>

    <insert id="insertBicycleSupplier">
        insert into bicycle (batch, supplier) values
        <foreach collection="supplierList" item="entity" separator=",">
            (#{batch}, #{entity.id} )
        </foreach>
    </insert>

    <select id="selectBicycleSupplier" resultMap="BicycleSupplierMap">
        select id, batch from bicycle
        where batch = #{batch}
    </select>

    <select id="selectByBatch" resultMap="BicycleSupplierMap">
        select t1.id , t1.batch "batch", t3.id "supplier_id", t3.name "supplier_name", t3.address "supplier_address"
        from bicycle t1
        left join bicycle_supplier t2 on t1.id = t2.bid
        left join supplier t3 on t2.sid = t3.id
        where t1.batch = #{batch}
    </select>

